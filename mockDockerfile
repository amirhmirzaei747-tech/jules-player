FROM node:16-alpine As builder

RUN mkdir app

WORKDIR /app

COPY ./package*.json ./

RUN npm i

COPY . .

RUN npm run buildMock

FROM nginx
COPY ./default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/dist /var/www/site
COPY --from=builder /app/dist/assets /var/www/site/watch/assets

